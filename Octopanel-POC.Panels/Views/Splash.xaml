<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Octopanel_POC.Panels.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Octopanel_POC.Panels.Views.Splash">
  <Design.DataContext>
    <vm:SplashPanelViewModel/>
  </Design.DataContext>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
      <RowDefinition Height="32"></RowDefinition>
    </Grid.RowDefinitions>
    <Button Grid.Row="0" Grid.RowSpan="2"></Button>
    <Image Grid.Row="0" Source="avares://Octopanel-POC.Panels/Assets/Octopus_256.png"></Image>
    <TextBlock 
      Grid.Row="1"
      Text="{Binding Message}"
      HorizontalAlignment="Center"
      FontSize="14"
      FontWeight="Bold"></TextBlock>
  </Grid>
</UserControl>
